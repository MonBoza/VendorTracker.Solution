@{
  Layout = "_Layout";
}

@using VendorTracker.Models;

 <h3>Add a Vendor here</h3>
    <form action="/vendors" method="post">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <label for="vendorName">Vendor name:</label>
                    <input id="vendorName" name="vendorName" type="text" class="form-control">
                </div>

                <div class="form-group">
                    <label for="vendorDescription">Description:</label>
                    <input id="vendorDescription" name="vendorDescription" type="text" class="form-control">
                </div>

                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </div>
    </form>
  </div>
  <br/>

<a href="/"><button>Back home</button></a>
<a href="/vendors"><button>Back to vendors.</button></a>