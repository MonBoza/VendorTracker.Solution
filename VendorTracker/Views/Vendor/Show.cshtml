@{
  Layout = "_Layout";
}

@using VendorTracker.Models;

<h3>Here are all the orders from this Vendor:</h3>
<h4>@Model["vendor"].Name</h4>
<br />
<ul>
  @foreach (Order order in @Model["orders"])
  {
    <li>
      <a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a>
    </li>
    <li>
      <a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Description</a>
    </li>
   <li>
      <a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Price</a>
    </li>
    <li>
      <a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Date</a>
    </li>
    <hr />
  }
</ul>

</form>
<br />
<p><a href='/vendors/@Model["vendor"].Id/items/new'>Add a new Order</a></p>
<p><a href='/vendors'>Return to Vendor list</a></p>
