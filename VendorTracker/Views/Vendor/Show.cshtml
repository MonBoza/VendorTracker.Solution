@{
  Layout = "_Layout";
}

@using VendorTracker.Models;

<h3>Here are all the orders from this Vendor:</h3>



@if (@Model["orders"].Count == 0)
{
  <p>There are no orders for this vendor yet.</p>
}
else
{
  <h4>There are <strong>@Model["orders"].Count</strong> orders for this vendor.</h4>

<p>Click each order for description of the order.</p>

  @foreach (Order order in @Model["orders"])
  {
   
      <h4><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></h4>;
  }
  }



<br />
