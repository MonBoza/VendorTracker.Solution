@{
  Layout = "_Layout";
}

@using VendorTracker.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No Vendors have been added yet!</h3>
}
<p>Click the vendor for Order Details</p>
@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
  <p>@vendor.Name Description: @vendor.Description</p>
}
<p><a href='/'>Back home</a></p>
<a href='/vendors/new'><button>Add a new Vendor</button></a>
